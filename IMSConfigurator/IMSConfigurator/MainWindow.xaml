<Window x:Class="IMSConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMSConfigurator"
        mc:Ignorable="d"
        Title="IMSCofigurator" Height="442" Width="525">
    <StackPanel>
        <Menu HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="517">
            <MenuItem Header="Настройки">
                <MenuItem Header="Управление модулями"></MenuItem>
            </MenuItem>
            <MenuItem Header="О программе">
                <MenuItem Header="Инфо"></MenuItem>
                <MenuItem Header="Выход"></MenuItem>
            </MenuItem>
        </Menu>
        <GroupBox Header="Шасси" HorizontalAlignment="Left" Height="53" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Height="17" Margin="0,9,-32,0" VerticalAlignment="Top" Width="517">
                <RadioButton Content="M-1000" GroupName="modelGroup" VerticalAlignment="Top" Margin="20,0,0,0" Height="17" Width="116" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" />
                <RadioButton Content="M-3000" GroupName="modelGroup" VerticalAlignment="Top" Margin="20,0,0,0" Height="17" Width="116" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Электропитание" HorizontalAlignment="Left" Height="99" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <Grid Margin="0,0,0,0">
                <StackPanel Margin="0,0,0,47" Orientation="Horizontal">
                    <CheckBox x:Name="rps_chkbx" Content="Резервированное" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="Double_rps_chkbx" Content="Двойной резерв" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal" Margin="0,35,0,0">
                    <TextBox TextWrapping="Wrap" Text="TextBox" Width="120" Margin="0,10"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10,10" Width="100"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10,10" Width="100"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10,10" Width="100"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Генераторы" Height="147" Margin="10,10">
            <Grid Margin="0,0,0,0">
                <StackPanel Margin="0,0,0,95" Orientation="Horizontal">
                    <CheckBox x:Name="Double_CLK" Content="Резерв генераторов" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal" Margin="0,30,0,53">
                    <TextBox TextWrapping="Wrap" Text="TextBox" Width="120" Margin="0,10"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10" Width="100"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10" Width="100"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10" Width="100"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal" Margin="0,77,0,0">
                    <TextBox TextWrapping="Wrap" Text="TextBox" Width="120" Margin="0,10"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10" Width="100"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10" Width="100"/>
                    <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="10" Width="100"/>
                </StackPanel>
            </Grid>
        </GroupBox>


    </StackPanel>
</Window>
